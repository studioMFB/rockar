{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "tsc watch",
			"command": "tsc",
			"isBackground": true,
				"args": [
				"-w",
				"-p",
				".",
				"--noEmit"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"echo": false,
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": "$tsc-watch",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}